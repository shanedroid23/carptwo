				//- 		img(src="img/fb-image.png" alt="Facebook Post")
				//- 	div(class="fb-body")
				//- 		p This is some blurb from a Facebook post.
				//- 		a(href="#") Read More...

			

		div(class="footer")
			footer(role="complementary" class="clearfix wrap" itemscope itemtype="http://schema.org/WPFooter")

				div(class="copyright") &copy; 2015 Carpbusters. All rights reserved.

				div(class="social")
					div(class="icon")
						a(href="http://facebook.com/Carping4conservation" target="_blank") #[i(class="fa fa-facebook-official")]	

		script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js")
		script(src="js/min/scripts.min.js")
		script(src="js/min/fb-loader.min.js")
